            url: "/TeleradCiti/UploadingStatus",
            type: 'POST',
            cache: false,
            data: { newValue: checkboxInput.checked, id: checkboxInput.id }

        });
    }

    function EmedicalStatus(checkboxInput) {
        $.ajax({
